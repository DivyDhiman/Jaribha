<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- Base application theme. -->
    <style name="NoTitleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:textViewStyle">@style/Widget.TextView</item>
        <item name="android:editTextStyle">@style/Widget.EditText</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner</item>
        <item name="android:checkboxStyle">@style/Widget.CheckBox</item>
        <item name="android:progressBarStyle">@style/Widget.ProgressBar</item>
        <!-- <item name="android:checkboxStyle">@style/Widget.CheckBox</item>-->
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>

        <!-- <item name="android:ratingBarStyleIndicator">@style/RatingBarBigAppTheme</item>

         <item name="android:ratingBarStyleSmall">@style/RatingBarSmallAppTheme</item>
 -->
        <item name="colorPrimary">@color/app_theme_color</item>
        <item name="colorPrimaryDark">@color/app_theme_color</item>
        <item name="colorAccent">@color/app_theme_color</item>
        <item name="colorButtonNormal">@color/app_theme_color</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/app_theme_color</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColorHint">@color/md_grey_50</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="Widget.Button.GreenBorder" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/app_theme_color</item>
        <item name="android:background">@drawable/green_border_button</item>
    </style>

    <style name="Widget.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:button">@drawable/custom_checkbox</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="Widget.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Spinner" parent="Widget.AppCompat.Spinner" />

    <style name="Widget.ProgressBar" parent="Widget.AppCompat.ProgressBar" />

    <style name="MenuLabelsStyle">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!--for image picker -->
    <style name="MIP_theme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
