<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/actionBar"
        layout="@layout/action_bar1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value45"
                        android:background="@drawable/bottom_actionbar"
                        android:orientation="horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/screen_margin_portrait"
                        android:layout_marginRight="@dimen/screen_margin_portrait"
                        android:background="@color/white"
                        android:minHeight="@dimen/value45">

                    </RelativeLayout>

                </LinearLayout>

                <com.jaribha.customviews.BezelImageView
                    android:id="@+id/profileImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user_pic"
                    app:borderDrawable="@drawable/border_drawable"
                    app:maskDrawable="@drawable/circle_mask" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/top_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/screen_margin_portrait"
                android:layout_marginRight="@dimen/screen_margin_portrait"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.jaribha.customviews.fonts.FontTextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/value5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    app:font="Lato-Semibold.ttf" />

                <com.jaribha.customviews.fonts.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value5"
                    android:text="2D Game Designer"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/md_grey_600"
                    android:visibility="gone"
                    app:font="Lato-Regular.ttf" />

                <com.jaribha.customviews.fonts.FontTextView
                    android:id="@+id/tv_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value5"
                    android:drawableLeft="@drawable/location_icon"
                    android:drawablePadding="@dimen/value5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/md_grey_600"
                    app:font="Lato-Regular.ttf" />

                <com.jaribha.customviews.fonts.FontTextView
                    android:id="@+id/tv_join_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value5"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="italic"
                    app:font="Lato-Italic.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value5"
                android:layout_marginLeft="@dimen/screen_margin_portrait"
                android:layout_marginRight="@dimen/screen_margin_portrait"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/value30"
                android:paddingTop="@dimen/value20">

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value10"
                    android:src="@drawable/email_icon_green" />

                <ImageView
                    android:id="@+id/phoneCall_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value10"
                    android:src="@drawable/phone_icon" />

                <ImageView
                    android:id="@+id/webAddress_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value10"
                    android:src="@drawable/window_icon" />

                <ImageView
                    android:id="@+id/fb_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value10"
                    android:src="@drawable/facebook_icon_small" />

                <ImageView
                    android:id="@+id/twitter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value10"
                    android:src="@drawable/twitter_icon_small" />

                <ImageView
                    android:id="@+id/instagram_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value10"
                    android:src="@drawable/instagram_icon" />

            </LinearLayout>

            <com.jaribha.customviews.fonts.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/screen_margin_portrait"
                android:layout_marginRight="@dimen/screen_margin_portrait"
                android:layout_marginTop="@dimen/value10"
                android:padding="@dimen/value10"
                android:text="@string/description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                app:font="Lato-Semibold.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/screen_margin_portrait"
                android:layout_marginRight="@dimen/screen_margin_portrait"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_space" />

                <com.jaribha.customviews.fonts.FontTextView
                    android:id="@+id/tv_user_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/value10"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/md_grey_600"
                    app:font="Lato-Medium.ttf" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_space" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/screen_margin_portrait"
                android:layout_marginRight="@dimen/screen_margin_portrait"
                android:layout_marginTop="@dimen/value180"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/value30"
                    android:background="@drawable/line_space" />

                <RelativeLayout
                    android:id="@+id/activity_Relay"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/value10">

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/tv_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/activity"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:font="Lato-Semibold.ttf" />

                    <com.jaribha.customviews.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/value10"
                        android:layout_toLeftOf="@+id/aeroActivity"
                        android:background="@drawable/notification"
                        android:padding="@dimen/value10"
                        android:text="20"
                        android:textColor="@color/white"
                        android:visibility="invisible"
                        app:font="Lato-Semibold.ttf" />

                    <ImageView
                        android:id="@+id/aeroActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/value30"
                        android:src="@drawable/right_arrow">

                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/created_Relay"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/value10">

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/tv_created"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="1dp"
                        android:singleLine="true"
                        android:text="@string/created"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:font="Lato-Semibold.ttf" />


                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/count_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/value10"
                        android:layout_toLeftOf="@id/arrow_1"
                        android:background="@drawable/notification"
                        android:gravity="center"
                        android:padding="@dimen/value10"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        app:font="Lato-Semibold.ttf" />

                    <ImageView
                        android:id="@+id/arrow_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/value30"
                        android:src="@drawable/right_arrow">

                    </ImageView>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/supported_Relay"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/value10">

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/tv_supported"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="1dp"
                        android:singleLine="true"
                        android:text="@string/supported1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:font="Lato-Semibold.ttf" />


                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/count_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/value10"
                        android:layout_toLeftOf="@id/arrow_2"
                        android:background="@drawable/notification"
                        android:gravity="center"
                        android:padding="@dimen/value10"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        app:font="Lato-Semibold.ttf" />

                    <ImageView
                        android:id="@+id/arrow_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/value30"
                        android:src="@drawable/right_arrow">

                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sponsered_Relay"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/value10">

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/tv_sponsored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="1dp"
                        android:singleLine="true"
                        android:text="@string/sponsored"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:font="Lato-Semibold.ttf" />


                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/count_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/value10"
                        android:layout_toLeftOf="@id/arrow_3"
                        android:background="@drawable/notification"
                        android:gravity="center"
                        android:padding="@dimen/value10"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        app:font="Lato-Semibold.ttf" />

                    <ImageView
                        android:id="@+id/arrow_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/value30"
                        android:src="@drawable/right_arrow">

                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/favourite_Relay"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/value10">

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/tv_favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="1dp"
                        android:singleLine="true"
                        android:text="@string/favourite"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:font="Lato-Semibold.ttf" />

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/count_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/value10"
                        android:layout_toLeftOf="@id/arrow_4"
                        android:background="@drawable/notification"
                        android:gravity="center"
                        android:padding="@dimen/value10"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        app:font="Lato-Semibold.ttf" />

                    <ImageView
                        android:id="@+id/arrow_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/value30"
                        android:src="@drawable/right_arrow">

                    </ImageView>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>