<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00A651"
            android:orientation="vertical"
            android:padding="@dimen/value5">

            <com.jaribha.customviews.fonts.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/confirmation"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                app:font="Lato-Bold_0.ttf" />

            <com.jaribha.customviews.fonts.FontTextView
                android:id="@+id/tv_payment_estimate_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Estimated Delivery 03-04-15"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:font="Lato-Italic.ttf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value80"
            android:layout_marginRight="@dimen/value80"
            android:layout_marginTop="@dimen/value10"
            android:orientation="horizontal">

            <include
                layout="@layout/project_list_item_card_view_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value10"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/value10">

                <com.jaribha.customviews.fonts.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="Edit"
                    android:textColor="#818389"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:font="Lato-Semibold.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/value5">

                    <com.jaribha.customviews.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_amount"
                        android:textColor="#00C3A8"
                        android:textSize="16sp"
                        app:font="Lato-Semibold.ttf" />

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/tv_payment_support_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:font="Lato-Regular.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/value5">

                    <com.jaribha.customviews.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/converted_USD_to_KD"
                        android:textColor="#00C3A8"
                        android:textSize="15sp"
                        app:font="Lato-Regular.ttf" />

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/tv_payment_kd_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:font="Lato-Regular.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/value5">

                    <com.jaribha.customviews.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_gateway"
                        android:textColor="#00C3A8"
                        android:textSize="15sp"
                        app:font="Lato-Regular.ttf" />

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/tv_payment_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:font="Lato-Regular.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/value5">

                    <com.jaribha.customviews.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selected_reward"
                        android:textColor="#00C3A8"
                        android:textSize="15sp"
                        app:font="Lato-Regular.ttf" />

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/tv_selected_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:font="Lato-Regular.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value10"
                    android:orientation="vertical"
                    android:padding="@dimen/value5">

                    <com.jaribha.customviews.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shipping_methods"
                        android:textColor="#00C3A8"
                        android:textSize="15sp"
                        app:font="Lato-Regular.ttf" />

                    <com.jaribha.customviews.fonts.FontTextView
                        android:id="@+id/tv_shipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:font="Lato-Regular.ttf" />

                </LinearLayout>

                <com.jaribha.customviews.fonts.FontTextView
                    android:id="@+id/tv_payment_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/edit_blue"
                    android:contentDescription="@string/app_name" />

            </LinearLayout>

        </LinearLayout>


        <com.jaribha.customviews.fonts.FontButton
            android:id="@+id/reviewPayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value10"
            android:background="@drawable/main_button_red"
            android:text="@string/continue_payment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:font="Lato-Regular.ttf" />
    </LinearLayout>

</ScrollView>