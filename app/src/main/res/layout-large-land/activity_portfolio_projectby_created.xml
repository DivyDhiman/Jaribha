<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/action_bar1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value10"
        android:background="@color/background"
        android:orientation="vertical" />

    <GridView
        android:id="@+id/projectsGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/value50"
        android:layout_marginRight="@dimen/value50"
        android:background="@color/white"
        android:dividerHeight="2dp"
        android:horizontalSpacing="15dp"
        android:numColumns="2"
        android:verticalSpacing="15dp"
        tools:listitem="@layout/portfolio_projectby_created_items" />

</LinearLayout>