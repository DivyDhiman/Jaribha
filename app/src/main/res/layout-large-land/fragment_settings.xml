<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/value40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:background="@color/white"
        android:orientation="vertical">

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/account_icon"
            android:drawablePadding="@dimen/value20"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="center_vertical"
            android:padding="@dimen/value15"
            android:text="@string/account"
            android:textColor="@color/md_grey_800"
            android:textStyle="normal"
            app:font="Lato-Bold_0.ttf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#32000000" />

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/edit_profile_icon"
            android:drawablePadding="@dimen/value20"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="center_vertical"
            android:padding="@dimen/value15"
            android:text="@string/edit_profile"
            android:textColor="@color/md_grey_800"
            android:textStyle="normal"
            app:font="Lato-Bold_0.ttf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#32000000" />

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/notification_icon"
            android:drawablePadding="@dimen/value20"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="center_vertical"
            android:padding="@dimen/value15"
            android:text="@string/notification"
            android:textColor="@color/md_grey_800"
            android:textStyle="normal"
            app:font="Lato-Bold_0.ttf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#32000000" />

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/selectLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/change_lang_icon"
            android:drawablePadding="@dimen/value20"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="center_vertical"
            android:padding="@dimen/value15"
            android:text="@string/select_languages"
            android:textColor="@color/md_grey_800"
            android:textStyle="normal"
            app:font="Lato-Bold_0.ttf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#32000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/value10"
        android:layout_marginRight="@dimen/value40"
        android:layout_marginTop="@dimen/value5"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/setting_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value40"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/img_header"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/md_white_1000"
            android:visibility="visible"
            app:font="Lato-Regular.ttf" />

        <FrameLayout
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>