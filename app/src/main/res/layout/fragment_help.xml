<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="3dp"
        android:background="@drawable/become_sponsor"
        android:drawableLeft="@drawable/icon_search_grey"
        android:drawablePadding="@dimen/value10"
        android:gravity="center_vertical"
        android:hint="Search"
        android:paddingLeft="@dimen/value10"
        android:textColorHint="@color/md_grey_500" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSupporter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value10"
                android:layout_marginLeft="@dimen/value15"
                android:text="Jaribha's core individuals"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1686B0" />

            <RelativeLayout
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/img_points" />

                <TextView
                    android:id="@+id/ques1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:layout_marginRight="@dimen/value30"
                    android:text="Who is Jaribha?"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/value10"
                    android:src="@drawable/icon_arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/value10"
                android:paddingLeft="@dimen/value10"
                android:paddingRight="@dimen/value10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/answerTxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/value20"
                    android:text="Not who, but what - Jaribha is an online platform that facilitates and manages contributions, allowing project owners also known as Creators to share their projects to get Supporters to contribute and make their projects come to life. The website allows Creators to develop and detail their projects on their own individual pages and gain support through Supporters that want to support projects based on their own personal interests and reaping token and modest rewards."
                    android:textSize="13sp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/point2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/img_points" />

                <TextView
                    android:id="@+id/ques2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:layout_marginRight="@dimen/value30"
                    android:text="Who is the Creator?"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/value10"
                    android:src="@drawable/icon_arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/value10"
                android:paddingLeft="@dimen/value10"
                android:paddingRight="@dimen/value10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/answerTxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:textStyle="bold"
                    android:text="The Creator is any project owner on Jaribha, or any person submitting an idea on Jaribha that desires exposure, feedback and community support to reach the Project Goal following the all-or-nothing method."
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/point3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/img_points" />

                <TextView
                    android:id="@+id/ques3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:layout_marginRight="@dimen/value30"
                    android:text="Who is the Supporter?"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/value10"
                    android:src="@drawable/icon_arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/value10"
                android:paddingLeft="@dimen/value10"
                android:paddingRight="@dimen/value10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/answerTxt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:textStyle="bold"
                    android:text="The person contributing to a project. They can be friends, family or simply any member of the community who has supported a project."
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/question4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/point4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/img_points" />

                <TextView
                    android:id="@+id/ques4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:layout_marginRight="@dimen/value30"
                    android:textStyle="bold"
                    android:text="What is a Community?"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/arrow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/value10"
                    android:src="@drawable/icon_arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/value10"
                android:paddingLeft="@dimen/value10"
                android:paddingRight="@dimen/value10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/answerTxt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:textStyle="bold"
                    android:text="A community is a social unit of any size that shares common values. An individual can create a project and choose the community they belong to, thus giving Creators a sense of credibility, and the community good exposure."
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/question5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/point5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/img_points" />

                <TextView
                    android:id="@+id/ques5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/value30"
                    android:text="How can I connect to Jaribha on social media?"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/arrow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/value10"
                    android:src="@drawable/icon_arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/value10"
                android:paddingLeft="@dimen/value10"
                android:paddingRight="@dimen/value10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/answerTxt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:text="Who is Jaribha?"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value10"
                android:layout_marginLeft="@dimen/value15"
                android:layout_marginTop="@dimen/value10"
                android:text="Creating a project"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1686B0" />

            <RelativeLayout
                android:id="@+id/question6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/point6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/img_points" />

                <TextView
                    android:id="@+id/ques6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:layout_marginRight="@dimen/value30"
                    android:textStyle="bold"
                    android:text="How do I create a project?"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/arrow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/value10"
                    android:src="@drawable/icon_arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/value10"
                android:paddingLeft="@dimen/value10"
                android:paddingRight="@dimen/value10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/answerTxt6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:textStyle="bold"
                    android:text="If you have a project or an idea that you want to see come to life, you can submit it here Start a Project . You must ensure your project follows all Jaribha guidelines and requirements. As a Creator on Jaribha, you are responsible in creating videos, content, images and plans of your idea or project, as well as list the total amount of support you will need to raise in order to execute it. You must also create different support categories and amounts, which also include rewards for each support category. The number of support categories is up to you the Creator."
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/question7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/point7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/img_points" />

                <TextView
                    android:id="@+id/ques7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:layout_marginRight="@dimen/value30"
                    android:textStyle="bold"
                    android:text="Does Jaribha process and review all projects before they launch?"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/arrow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/value10"
                    android:src="@drawable/icon_arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/value10"
                android:paddingLeft="@dimen/value10"
                android:paddingRight="@dimen/value10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/answerTxt7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:textStyle="bold"
                    android:text="Yes - after you submit all your details, our team will review the details of your project and contact you with a status update within 1-3 weeks. Jaribha's review process is to keep the website as safe and secure as possible for Supporters and Creators."
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/question8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/point8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/img_points" />

                <TextView
                    android:id="@+id/ques8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/value20"
                    android:layout_marginRight="@dimen/value30"
                    android:text="Do all submitted projects get approved?"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/arrow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/value10"
                    android:src="@drawable/icon_arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/value10"
                android:paddingLeft="@dimen/value10"
                android:paddingRight="@dimen/value10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/answerTxt8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value20"
                    android:text="Jaribha is the sole decision maker in approving projects. While reserving its right not to approve any project for any reason, only projects that meet Jaribha's guidelines and requirements will get approved. To learn more about Jaribha's guidelines, please click here"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>