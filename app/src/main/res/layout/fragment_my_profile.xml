<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value45"
                    android:background="@drawable/bottom_actionbar"
                    android:orientation="horizontal" />

                <com.jaribha.customviews.BezelImageView
                    android:id="@+id/profileImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/user_pic"
                    app:borderDrawable="@drawable/border_drawable"
                    app:maskDrawable="@drawable/circle_mask" />
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value5"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value5"
                android:drawableLeft="@drawable/location_icon"
                android:drawablePadding="@dimen/value5"
                android:text="Dubai, UAE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/md_grey_600" />

            <TextView
                android:id="@+id/tv_join_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value5"
                android:text="Joi-2015-12-23 10:09:22"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value20"
            android:layout_marginTop="@dimen/value20"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/value10"
                android:src="@drawable/email_icon_green" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/value10"
                android:src="@drawable/phone_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/value10"
                android:src="@drawable/window_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/value10"
                android:src="@drawable/facebook_icon_small" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/value10"
                android:src="@drawable/twitter_icon_small" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/value10"
                android:src="@drawable/instagram_icon" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/value10"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_space" />

            <TextView
                android:id="@+id/tv_user_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/value10"
                android:text="Little Joules boast upbeat, vibrant clothes for kids who love the outdoors. British born and bred, the quirky brand's children's collection reflects the adult range, featuring practical, on-trend clot."
                android:textColor="@color/md_grey_600" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_space" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/value10"
            android:background="@drawable/line_space" />

        <TextView
            android:id="@+id/tv_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableRight="@drawable/right_arrow"
            android:paddingBottom="@dimen/value20"
            android:paddingLeft="@dimen/value10"
            android:paddingRight="@dimen/value15"
            android:paddingTop="@dimen/value20"
            android:singleLine="true"
            android:text="@string/activity"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/right_arrow"
            android:paddingBottom="@dimen/value20"
            android:paddingLeft="@dimen/value10"
            android:paddingRight="@dimen/value15"
            android:paddingTop="@dimen/value20"
            android:singleLine="true"
            android:text="@string/created"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_supported"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/right_arrow"
            android:paddingBottom="@dimen/value20"
            android:paddingLeft="@dimen/value10"
            android:paddingRight="@dimen/value15"
            android:paddingTop="@dimen/value20"
            android:singleLine="true"
            android:text="@string/supported1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_sponsored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/right_arrow"
            android:paddingBottom="@dimen/value20"
            android:paddingLeft="@dimen/value10"
            android:paddingRight="@dimen/value15"
            android:paddingTop="@dimen/value20"
            android:singleLine="true"
            android:text="@string/sponsored"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/right_arrow"
            android:paddingBottom="@dimen/value20"
            android:paddingLeft="@dimen/value10"
            android:paddingRight="@dimen/value15"
            android:paddingTop="@dimen/value20"
            android:singleLine="true"
            android:text="@string/favourite"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
</ScrollView>
