<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_back"
    android:orientation="vertical"
    android:padding="@dimen/value10">

    <ImageView
        android:id="@+id/img_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/value20"
        android:src="@drawable/icon_error" />

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Required Information"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/hint_color"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.jaribha.customviews.fonts.FontTextView
        app:font ="Lato-Semibold.ttf"
        android:id="@+id/tv_dialog_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value5"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="@dimen/value30"
        android:orientation="horizontal"
        android:weightSum="1">


        <com.jaribha.customviews.fonts.FontButton
            app:font ="Lato-Semibold.ttf"
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="@dimen/value5"
            android:layout_weight="1"
            android:background="@drawable/login_button_sel"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/dgts__okay"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
</LinearLayout>