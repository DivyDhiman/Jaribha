<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_pop"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/md_blue_grey_100"
        android:orientation="vertical"
        android:padding="@dimen/value20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Become a Sponsor" />

            <ImageView
                android:id="@+id/iv_close_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/value10"
                android:src="@drawable/close_icon" />

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value20"
            android:background="@color/md_white_1000"
            android:hint="Full Name"
            android:padding="@dimen/value10"
            android:textColorHint="@color/md_grey_500" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value20"
            android:background="@color/md_white_1000"
            android:hint="Company Name"
            android:padding="@dimen/value10"
            android:textColorHint="@color/md_grey_500" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value20"
            android:background="@color/md_white_1000"
            android:hint="Email"
            android:padding="@dimen/value10"
            android:textColorHint="@color/md_grey_500" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value20"
            android:background="@color/md_white_1000"
            android:hint="Phone"
            android:padding="@dimen/value10"
            android:textColorHint="@color/md_grey_500" />

        <Button
            style="@style/Widget.Button.GreenBorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value20"
            android:paddingLeft="@dimen/value10"
            android:paddingRight="@dimen/value10"
            android:text="Submit"
            android:textAllCaps="true" />
    </LinearLayout>

</RelativeLayout>