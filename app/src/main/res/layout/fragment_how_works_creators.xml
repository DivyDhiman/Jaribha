<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"
            android:padding="@dimen/value10"
            android:paddingBottom="@dimen/value5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Creators Steps"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#00A5C7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value5"
                android:gravity="center_horizontal"
                android:text="To become a Creator, an individual must choose to create a project."
                android:textStyle="italic" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_white_1000"
            android:paddingBottom="@dimen/value20">

            <ImageView
                android:id="@+id/iv_point01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point_scroll" />

            <View
                android:id="@+id/view02"
                android:layout_width="3dp"
                android:layout_height="35dp"
                android:layout_below="@+id/iv_point01"
                android:layout_centerHorizontal="true"
                android:background="@color/md_grey_500" />

            <ImageView
                android:id="@+id/iv_point03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view02"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point_scroll_white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/value5"
                android:layout_marginTop="31dp"
                android:layout_toLeftOf="@+id/view02"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_background"
                    android:gravity="center"
                    android:padding="@dimen/value10"
                    android:text="Create an account and sign in"
                    android:textColor="@color/md_white_1000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_shape_left" />

            </LinearLayout>

            <View
                android:id="@+id/view12"
                android:layout_width="3dp"
                android:layout_height="35dp"
                android:layout_below="@+id/iv_point03"
                android:layout_centerHorizontal="true"
                android:background="@color/md_grey_500" />

            <ImageView
                android:id="@+id/iv_point13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view12"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point_scroll_white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="81dp"
                android:layout_toRightOf="@+id/iv_point13"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_shape_right" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_background"
                    android:gravity="center"
                    android:padding="@dimen/value10"
                    android:text="Click\nStart your Project"
                    android:textColor="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:id="@+id/view22"
                android:layout_width="3dp"
                android:layout_height="35dp"
                android:layout_below="@+id/iv_point13"
                android:layout_centerHorizontal="true"
                android:background="@color/md_grey_500" />

            <ImageView
                android:id="@+id/iv_point23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view22"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point_scroll_white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="132dp"
                android:layout_toLeftOf="@+id/iv_point23"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_background"
                    android:gravity="center"
                    android:padding="@dimen/value10"
                    android:text="Fill out the application"
                    android:textColor="@color/md_white_1000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_shape_left" />

            </LinearLayout>

            <View
                android:id="@+id/view32"
                android:layout_width="3dp"
                android:layout_height="35dp"
                android:layout_below="@+id/iv_point23"
                android:layout_centerHorizontal="true"
                android:background="@color/md_grey_500" />

            <TextView
                android:id="@+id/tv_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view32"
                android:layout_centerHorizontal="true"
                android:padding="3dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Wait for Approval" />

            <View
                android:id="@+id/view42"
                android:layout_width="3dp"
                android:layout_height="55dp"
                android:layout_below="@+id/tv_wait"
                android:layout_centerHorizontal="true"
                android:background="@color/md_grey_500" />

            <ImageView
                android:id="@+id/iv_point33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view42"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point_scroll_white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="247dp"
                android:layout_toRightOf="@+id/iv_point23"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_shape_right" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_background"
                    android:gravity="center"
                    android:padding="@dimen/value10"
                    android:text="If approved, the project will go online for the alloted time period."
                    android:textColor="@color/md_white_1000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:layout_toLeftOf="@+id/iv_point23"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_background"
                    android:gravity="center"
                    android:padding="@dimen/value10"
                    android:text="If project is not approved, the Creator may be asked to sort out some issues within the project."
                    android:textColor="@color/md_white_1000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_shape_left" />

            </LinearLayout>

            <View
                android:id="@+id/view52"
                android:layout_width="3dp"
                android:layout_height="55dp"
                android:layout_below="@+id/iv_point33"
                android:layout_centerHorizontal="true"
                android:background="@color/md_grey_500" />

            <TextView
                android:id="@+id/tv_alloted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view52"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="After the allotted period ends\nthe creator would have" />

            <View
                android:id="@+id/view62"
                android:layout_width="3dp"
                android:layout_height="55dp"
                android:layout_below="@+id/tv_alloted"
                android:layout_centerHorizontal="true"
                android:background="@color/md_grey_500" />

            <ImageView
                android:id="@+id/iv_point43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view62"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point_scroll_white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:layout_toRightOf="@+id/iv_point43"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_shape_right" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/value10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Not reached their Project Goal."
                        android:textColor="@color/md_white_1000" />

                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_margin="@dimen/value5"
                        android:background="@color/md_white_1000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="An unsuccessfully supported project"
                        android:textColor="@color/md_white_1000" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="402dp"
                android:layout_toLeftOf="@+id/iv_point43"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/value10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Reached their Project Goal or surpassed it."
                        android:textColor="@color/md_white_1000" />

                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_margin="@dimen/value5"
                        android:background="@color/md_white_1000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="A successfully supported project"
                        android:textColor="@color/md_white_1000" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_shape_left" />

            </LinearLayout>

            <View
                android:id="@+id/view72"
                android:layout_width="3dp"
                android:layout_height="55dp"
                android:layout_below="@+id/iv_point43"
                android:layout_centerHorizontal="true"
                android:background="@color/md_grey_500" />

            <TextView
                android:id="@+id/tv_learn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view72"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="@dimen/value5"
                android:text="Learn more at Help Center"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>