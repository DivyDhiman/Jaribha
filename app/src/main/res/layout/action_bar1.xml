<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@drawable/img_header"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/value15"
        android:src="@drawable/close_icon"
        android:visibility="gone" />

    <com.jaribha.customviews.BezelImageView
        android:id="@+id/chat_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/value5"
        android:layout_marginRight="@dimen/value5"
        android:layout_toEndOf="@+id/iv_close"
        android:layout_toRightOf="@id/iv_close"
        android:src="@drawable/user_icon"
        android:visibility="gone"
        app:borderDrawable="@drawable/border_drawable"
        app:maskDrawable="@drawable/circle_mask" />

    <ImageView
        android:id="@+id/eImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_close"
        android:layout_toRightOf="@+id/iv_close"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/value5"
        android:src="@drawable/ic_menu_start_project"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/md_white_1000"
            android:visibility="gone"
            app:font="Lato-Regular.ttf" />

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone"
            app:font="Lato-Regular.ttf" />
    </LinearLayout>

    <com.jaribha.customviews.fonts.FontTextView
        android:id="@+id/tv_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/apply"
        android:paddingRight="@dimen/value10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_white_1000"
        android:visibility="gone"
        app:font="Lato-Regular.ttf" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_favourite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/value10"
            android:layout_marginRight="@dimen/value10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/favourite_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="@dimen/value10"
            android:layout_marginRight="@dimen/value10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/share_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="@dimen/value10"
            android:layout_marginRight="@dimen/value10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/edit_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/value10"
            android:src="@drawable/search_icon"
            android:visibility="gone" />

        <com.jaribha.customviews.BezelImageView
            android:id="@+id/img_user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/value5"
            android:layout_marginRight="@dimen/value5"
            android:scaleType="fitCenter"
            android:src="@drawable/user_pic"
            app:borderDrawable="@drawable/border_drawable"
            android:visibility="gone"
            app:maskDrawable="@drawable/circle_mask" />
    </LinearLayout>

</RelativeLayout>