<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/account_icon"
            android:drawablePadding="@dimen/value20"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="center_vertical"
            android:padding="@dimen/value15"
            android:text="@string/account"
            android:textColor="@color/md_grey_800"
            android:textStyle="normal"
            app:font="Lato-Bold_0.ttf" />

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/edit_profile_icon"
            android:drawablePadding="@dimen/value20"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="center_vertical"
            android:padding="@dimen/value15"
            android:text="@string/edit_profile"
            android:textColor="@color/md_grey_800"
            android:textStyle="normal"
            app:font="Lato-Bold_0.ttf" />

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/notification_icon"
            android:drawablePadding="@dimen/value20"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="center_vertical"
            android:padding="@dimen/value15"
            android:text="@string/notification"
            android:textColor="@color/md_grey_800"
            android:textStyle="normal"
            app:font="Lato-Bold_0.ttf" />

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/selectLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/change_lang_icon"
            android:drawablePadding="@dimen/value20"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="center_vertical"
            android:padding="@dimen/value15"
            android:text="@string/select_languages"
            android:textColor="@color/md_grey_800"
            android:textStyle="normal"
            app:font="Lato-Bold_0.ttf" />
    </LinearLayout>

</ScrollView>