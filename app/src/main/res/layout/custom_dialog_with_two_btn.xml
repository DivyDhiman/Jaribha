<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_back"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/value10">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_back"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/value30"
            android:src="@drawable/delete_info" />

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/delete"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/hint_color"
            android:textStyle="bold"
            app:font="Lato-Semibold.ttf" />

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/tv_dialog_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value5"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            app:font="Lato-Semibold.ttf" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value30"
            android:orientation="vertical">

            <com.jaribha.customviews.fonts.FontButton
                android:id="@+id/btn_yes"
                style="@style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_green"
                android:gravity="center"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:font="Lato-Semibold.ttf" />

            <com.jaribha.customviews.fonts.FontButton
                android:id="@+id/btn_no"
                style="@style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value10"
                android:gravity="center"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:font="Lato-Semibold.ttf" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>