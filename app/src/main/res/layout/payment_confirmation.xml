<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00A651"
            android:orientation="vertical"
            android:padding="@dimen/value5">

            <com.jaribha.customviews.fonts.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirmation"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:font="Lato-Bold_0.ttf" />

            <com.jaribha.customviews.fonts.FontTextView
                android:id="@+id/tv_payment_estimate_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center|left"
                android:text="Estimated Delivery 03-04-15"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:font="Lato-Italic.ttf" />

        </LinearLayout>

        <include layout="@layout/project_list_item_card_view_new" />

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/tv_payment_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:padding="5dp"
            android:text="Edit"
            android:textColor="#818389"
            android:textSize="16sp"
            app:font="Lato-Semibold.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.jaribha.customviews.fonts.FontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/support_amount"
                android:textColor="#00C3A8"
                android:textSize="16sp"
                app:font="Lato-Semibold.ttf" />

            <com.jaribha.customviews.fonts.FontTextView
                android:id="@+id/tv_payment_support_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=" $ 10"
                android:textColor="#00C3A8"
                android:textSize="16sp"
                app:font="Lato-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.jaribha.customviews.fonts.FontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/converted_USD_to_KD"
                android:textColor="#00C3A8"
                android:textSize="15sp"
                app:font="Lato-Regular.ttf" />

            <com.jaribha.customviews.fonts.FontTextView
                android:id="@+id/tv_payment_kd_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=" 3.03 KD"
                android:textColor="#00C3A8"
                android:textSize="15sp"
                app:font="Lato-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.jaribha.customviews.fonts.FontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/payment_gateway"
                android:textColor="#00C3A8"
                android:textSize="15sp"
                app:font="Lato-Regular.ttf" />

            <com.jaribha.customviews.fonts.FontTextView
                android:id="@+id/tv_payment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Credit"
                android:textColor="#00C3A8"
                android:textSize="15sp"
                app:font="Lato-Regular.ttf" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.jaribha.customviews.fonts.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/rewardTitle"
                android:padding="10dp"
                android:text="@string/selected_reward"
                android:layout_alignParentLeft="true"
                android:textColor="#00C3A8"
                android:textSize="15sp"
                app:font="Lato-Regular.ttf" />

            <com.jaribha.customviews.fonts.FontTextView
                android:id="@+id/tv_selected_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center|right"
                android:padding="10dp"
                android:layout_toRightOf="@+id/rewardTitle"
                android:text="No thanks i just want to help the project"
                android:textColor="@color/md_grey_600"
                android:textSize="13sp"
                app:font="Lato-Regular.ttf" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value10"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.jaribha.customviews.fonts.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/shipping_methods"
                android:textColor="#00C3A8"
                android:textSize="15sp"
                app:font="Lato-Regular.ttf" />

            <com.jaribha.customviews.fonts.FontTextView
                android:id="@+id/tv_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:text="Shipping worldwide"
                android:textColor="@color/md_grey_600"
                android:textSize="13sp"
                app:font="Lato-Regular.ttf" />

        </LinearLayout>

        <com.jaribha.customviews.fonts.FontButton
            android:id="@+id/reviewPayBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EC6D5E"
            android:text="@string/continue_payment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:font="Lato-Regular.ttf" />
    </LinearLayout>

</ScrollView>