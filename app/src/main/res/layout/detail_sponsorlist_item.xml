<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sponsorImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sponsor_placeholder"
        android:contentDescription="@string/app_name" />

    <com.jaribha.customviews.fonts.FontTextView
        android:id="@+id/sponsorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/value10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        app:font="Lato-Bold_0.ttf" />

    <com.jaribha.customviews.fonts.FontTextView
        android:id="@+id/sponsorDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/value10"
        android:textColor="@color/md_grey_700"
        app:font="Lato-Regular.ttf" />

    <com.jaribha.customviews.fonts.FontTextView
        android:id="@+id/sponsorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/value10"
        android:text="@string/more_info_plus"
        android:textColor="@color/app_theme_color"
        app:font="Lato-Regular.ttf" />
</LinearLayout>