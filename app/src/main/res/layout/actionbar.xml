<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@drawable/img_header">

    <ImageView
        android:id="@+id/menuImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:paddingBottom="@dimen/value15"
        android:paddingEnd="@dimen/value10"
        android:paddingLeft="@dimen/value15"
        android:paddingRight="@dimen/value10"
        android:paddingStart="@dimen/value15"
        android:paddingTop="@dimen/value15"
        android:src="@drawable/menu_icon"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:paddingBottom="@dimen/value15"
        android:paddingEnd="@dimen/value10"
        android:paddingLeft="@dimen/value15"
        android:paddingRight="@dimen/value10"
        android:paddingStart="@dimen/value15"
        android:paddingTop="@dimen/value15"
        android:src="@drawable/btn_back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/vImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/menuImg"
        android:layout_toRightOf="@+id/menuImg"
        android:contentDescription="@string/app_name"
        android:src="@drawable/video_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/jaribha_action_logo"
        android:visibility="gone" />

    <com.jaribha.customviews.fonts.FontTextView
        android:id="@+id/tv_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_white_1000"
        android:textStyle="bold"
        android:visibility="gone"
        app:font="Lato-Regular.ttf" />

    <ImageView
        android:id="@+id/iv_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_search"
        android:layout_toStartOf="@+id/iv_search"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/value10"
        android:src="@drawable/filter_icon"
        android:visibility="gone" />

    <com.jaribha.customviews.BezelImageView
        android:id="@+id/img_user_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/value5"
        android:layout_marginRight="@dimen/value5"
        android:src="@drawable/user_pic"
        app:borderDrawable="@drawable/border_drawable"
        app:maskDrawable="@drawable/circle_mask" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_user_image"
        android:layout_toStartOf="@+id/img_user_image"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/value10"
        android:src="@drawable/search_icon"
        android:visibility="gone" />

    <com.jaribha.customviews.fonts.FontTextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/value15"
        android:paddingRight="@dimen/value15"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_white_1000"
        android:textStyle="bold"
        android:visibility="gone"
        app:font="Lato-Semibold.ttf" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/value10"
        android:layout_marginRight="@dimen/value10"
        android:orientation="horizontal"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/notifyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <com.jaribha.customviews.fonts.FontTextView
                android:id="@+id/notifyIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/value5"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                app:font="Lato-Regular.ttf" />

        </FrameLayout>

        <com.jaribha.customviews.fonts.FontTextView
            android:id="@+id/pointsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/value10"
            android:layout_marginStart="@dimen/value10"
            android:layout_marginTop="2dp"
            android:background="@drawable/logo"
            android:gravity="center|bottom"
            android:paddingBottom="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            app:font="Lato-Regular.ttf" />

    </LinearLayout>

</RelativeLayout>
